<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_from">

    <ImageView
        android:id="@+id/rocket"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@android:color/transparent"
        android:src="@drawable/rocket" />

    <ImageView
        android:id="@+id/doge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="53dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/doge" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/level_background_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/island_l4" />


    <LinearLayout
        android:id="@+id/coin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/coin_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/coin_face" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/coin_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/coin_face" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/coin_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/coin_face" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/coin_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/coin_face" />
    </LinearLayout>

</FrameLayout>
